<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_login">


    <ImageView
        android:id="@+id/login_p1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/main" />



    <TextView
        android:id="@+id/login_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_p1"
        android:layout_marginTop="10dp"
        android:text="내 손안에 작은 플레너"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        />

    <EditText
        android:id="@+id/login_Input_id"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Email" />


    <EditText
        android:id="@+id/login_input_pw"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_Input_id"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:inputType="textPassword"
        />


    <Button
        android:id="@+id/login_btn"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:textAllCaps="false"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/login_input_pw"
        android:layout_alignLeft="@+id/login_input_pw"

        />

    <Button
        android:id="@+id/login_btn_sign"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_input_pw"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/login_input_pw"
        android:text="Sing up"
        android:textAllCaps="false"

        />

    <CheckBox
        android:id="@+id/login_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_sign"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="Remember login" />


    <ImageButton
        android:id="@+id/login_btn_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_checkBox"
        android:layout_centerHorizontal="true"
        android:src="@drawable/kakao_login_medium_wide"
        android:textAllCaps="false" />
    



    <Button
        android:id="@+id/login_btn_naver"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_btn_kakao"
        android:layout_centerHorizontal="true"

        android:text="네이버 로그인" />


</RelativeLayout>