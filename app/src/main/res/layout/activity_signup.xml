<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity_sign"
    android:padding="20dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="36sp"
        android:gravity="center"
        android:text="회원가입"
        android:padding="20sp"
        />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:id="@+id/sign_input_id"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="아이디(이메일주소)"
            android:textSize="14sp"
            android:padding="5dp"
            />

        <Button
            android:id="@+id/sign_btnConfirm_id"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="중복확인"
            android:textSize="14sp"
            android:padding="5dp"

            >

        </Button>

    </LinearLayout>



    <EditText
        android:id="@+id/sign_input_pw"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="8~16자의 영문 대소문,숫자 및 특수문자 사용"
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:inputType="textPassword"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/sign_inputConfirm_pw"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="한번더 비밀번호를 입력해주세요."
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/sign_btnConfrim_pw"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="비번확인"
            android:textSize="14sp"
            android:padding="5dp"
            />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >

        <EditText
            android:id="@+id/sign_input_nick"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:hint="닉네임 설정"
            android:textSize="12sp"
            android:padding="5dp"
            />


        <Button
            android:id="@+id/sign_btnConfirm_nickname"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="중복확인"
            android:textSize="14sp"
            android:padding="5dp"
            >

        </Button>

    </LinearLayout>

    <EditText
        android:id="@+id/sign_input_name"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="이름 입력"
        android:textSize="12sp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/sign_input_age"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:hint="나이 입력"
        android:textSize="12sp"
        android:padding="5dp"
        android:ems="2"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/sing_input_PN"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:ems="11"
            android:hint="010 - 0000 - 0000 (휴대폰 번호 입력)"
            android:textSize="12sp"
            android:inputType="number" />

        <Button
            android:id="@+id/sign_btnConfirm_PN"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="인증받기"
            android:textSize="14sp"
            android:padding="5dp"
            />
    </LinearLayout>


    <Button
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:padding="5dp"
        android:text="Sign Up"
        android:textSize="20sp"
        android:layout_gravity="bottom">

    </Button>




</LinearLayout>
